int chooseDif(int &difficulty)
{
     char diff; 
      cout <<  "                                                                      \n"                                                                      
           <<  "                            Which difficulty?                         \n"
           <<  "                                                                      \n"
           <<  "                                                                      \n"
           <<  "                                A: Easy                               \n"                     
           <<  "                                                                      \n"
           <<  "                                B: Medium                             \n"
           <<  "                                                                      \n"
           <<  "                                C: Hard                               \n"
           <<  "                                                                      \n"
           <<  "                                "; cin.get(diff);
           while(diff!= 'A'&& diff!= 'a'&& diff!='B' &&diff!='b'&&diff!='C'&&diff!='c')
           {
                cout << "\nThat is not a valid difficulty. Please try again." << endl;
                cin >> diff;
                
           }
           
           if(diff == 'A' || diff == 'a')
           difficulty = 1;
           if(diff == 'B' || diff == 'b')
           difficulty = 2;
           if(diff == 'C' || diff == 'c')
           difficulty = 3;
           return difficulty;
}
                                   
