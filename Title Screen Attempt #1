int main()
{
   system("Color 0d");
    bool gameIsRunning = true;
    gameSpeed = difficulty* 40
    string davis = "Davis";
    string oscar = "Oscar";
    char pressStart;
    int difficulty
    short int move[2] = {0,-1}
    titleScreen(pressStart);
    difficulty = chooseDif(difficulty);
               
                while (GameIsRunning)
    {
        if (GetAsyncKeyState(VK_UP))
        {
            if (move[1]==0)
            {
                move[1]=-1;
                move[0]=0;
            }

        }
        else if (GetAsyncKeyState(VK_DOWN))
        {
            if (move[1]==0)
            {
                move[1]=1;
                move[0]=0;
            }
        }
        else if (GetAsyncKeyState(VK_LEFT))
        {
            if (move[0]==0)
            {
                move[1]=0;
                move[0]=-1;
            }
        }
        else if (GetAsyncKeyState(VK_RIGHT))
        {
            if (move[0]==0)
            {
                move[1]=0;
                move[0]=1;
            }
        }
        if(snakeMove(snake,move))
        {
          system("cls");
          cout<<"Game Over"<<endl;
          system("pause");
          return 0;
        }
        Sleep(GameSpeed);
    }
}
    



    return 0;
}

int chooseDif(int &difficulty)
{
     char diff; 
      cout <<  "                                                                      \n"                                                                      
           <<  "                            Which difficulty?                         \n"
           <<  "                                                                      \n"
           <<  "                                                                      \n"
           <<  "                                A: Easy                               \n"                     
           <<  "                                                                      \n"
           <<  "                                B: Medium                             \n"
           <<  "                                                                      \n"
           <<  "                                C: Hard                               \n"
           <<  "                                                                      \n"
           <<  "                                "; cin.get(diff);
           while(diff!= 'A'&& diff!= 'a'&& diff!='B' &&diff!='b'&&diff!='C'&&diff!='c')
           {
                cout << "\nThat is not a valid difficulty. Please try again." << endl;
                cin >> diff;
                
           }
           
           if(diff == 'A' || diff == 'a')
           difficulty = 1;
           if(diff == 'B' || diff == 'b')
           difficulty = 2;
           if(diff == 'C' || diff == 'c')
           difficulty = 3;
           return difficulty;
}
                                   
